[user]
 name =
 email =
[core]
 pager = delta
 editor = nvim
[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[interactive]
    diffFilter = delta --color-only

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none

[delta]
    plus-style = "syntax #012800"
    minus-style = "syntax #340001"
    syntax-theme = TwoDark
    side-by-side = true
    line-numbers = true

[interactive]
    diffFilter = delta --color-only

[pull]
 rebase = false
[init]
 defaultBranch = production
[diff]
	tool = vimdiff
[difftool]
	prompt = false
